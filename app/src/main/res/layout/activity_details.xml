<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".Details">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="435dp"
        android:layout_height="277dp"
        android:background="#323232"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/details_count3"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Rate per hour:"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/details_reserve"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/details_count2"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Vehicle count:"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/details_count3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/details_address2"
        android:layout_width="357dp"
        android:layout_height="44dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="sans-serif-medium"
        android:text="Address:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/details_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/details_placename"
        android:layout_width="347dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/details_address2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/details_address"
        android:layout_width="350dp"
        android:layout_height="101dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/details_count2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/details_count"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/details_rate"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/details_rate"
        android:layout_width="73dp"
        android:layout_height="47dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/details_reserve"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/details_reserve"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rounded_corners_1"
        android:text="@string/reserve"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="438dp"
        android:layout_height="274dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:scaleType="fitCenter"/>

</androidx.constraintlayout.widget.ConstraintLayout>